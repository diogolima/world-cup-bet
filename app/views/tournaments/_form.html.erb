      <h2><%= pluralize(tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>
      <ul>
      <% tournament.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, id: :tournament_name, class: "form-control"  %>
  </div>
  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_area :description, id: :tournament_description, class: "form-control"  %>
  </div>
  <div class="field form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
    <%= link_to 'Back', tournaments_path, class: "btn btn-default" %>
  </div>

<% end %>
