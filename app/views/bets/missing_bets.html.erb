<%= form_for @all_bets, url: { action: "create_bets" }, html: { multipart: true } do |f| %>
  <div>
    <div class="user-bets">
      <%= f.submit 'Create Bets', class: 'btn btn-primary'%>
      <%= link_to 'Back', bets_path, class: 'btn btn-primary' %>
    </div>
    <div class="table-responsive bet-table">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Round</th>
            <th><strong>Tournament:</strong></th>
            <th colspan="2"><%= @all_bets.first.game.tournament.name %></th>
            <th>Date</th>
          </tr>
        </thead>
          <tbody>
            <% @all_bets.each do |bet| %>
              <tr>
                <%= fields_for 'bets[]', bet,  include_id: true do |b| %>
                  <%= b.hidden_field :game_id, value: bet.game_id %>
                  <%= b.hidden_field :first_team_id, value: bet.game.first_team.id %>
                  <%= b.hidden_field :second_team_id, value: bet.game.second_team_id %>
                    <td class="middle-align col-sm-1"><%= bet.game.round %></td>
                    <td class="col-sm-3"><%= image_tag bet.game.first_team.image, class: 'team_image img-rounded', title: bet.game.first_team.name %></td>
                    <td class="middle-align col-sm-3"><%= b.number_field :first_team_score, in: 0..22 %> <strong> x </strong>
                      <%= b.number_field :second_team_score, in: 0..22 %> </td>
                    <td class="col-sm-3"><%= image_tag bet.game.second_team.image, class: 'team_image img-rounded', title: bet.game.second_team.name %></td>
                    <td class="middle-align col-sm-2"><%= bet.game.date.strftime("%d/%m/%Y") %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
<% end %>
