<div class="jumbotron">
  <h3>
    Tournament: <%= @game.tournament.name %>
    <%= link_to "Back", games_per_tournament_path(tournament_id: @game.tournament.id), class: "btn btn-default" %>
  </h3>
  </br>
  <div id="teams_flags">
    <%= image_tag @game.first_team.image, class: "#{@game.first_team.team_type}_team_image img-rounded", title: @game.first_team.name  %>
    X
    <%= image_tag @game.second_team.image, class: "#{@game.first_team.team_type}_team_image img-rounded", title: @game.second_team.name  %>
    </br></br>
    <strong> Round: </strong><%= @game.round %></br>
    <strong> Date: </strong><%= @game.date.strftime("%d/%m/%Y at %I:%M %p") %> </br>
    <strong> Score: </strong>
    <mark>
    <% if @game.score_first_team.blank? %>
      <%= @game.score_first_team %> x <%= @game.score_second_team %>
    <% else %>
      Waiting
    <% end %>
    </mark>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>User name </th>
        <th><%= @game.first_team.name %> score</th>
        <th><%= @game.second_team.name %> score</th>
        <th>Bet score </th>
      </tr>
    </thead>
    <tbody>
      <% @bets.each do |bet| %>
        <tr>
          <td><%= bet.user.name %></td>
          <td><%= bet.first_team_score %></td>
          <td><%= bet.second_team_score %></td>
          <td><%= bet.bet_score %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
