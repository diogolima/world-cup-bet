<h1>Editing Game</h1>

<%= form_for @bet, local: true, html: { multipart: true } do |f| %>
  <% if @bet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bet.errors.count, "error") %> prohibited this bet from being saved:</h2>
      <ul>
      <% @bet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="table-responsive bet-table">
    <table class="table table-striped">
  <div class="game">
    <td class='col-sm-4'><%= image_tag @bet.game.first_team.image, class: 'team_image img-rounded' %></td>
