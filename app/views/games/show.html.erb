<% if user_admin %>
  <p>
    <%= link_to 'New', new_game_path(tournament_id: @game.tournament_id), class: "btn-sm btn-primary"%>
  </p>
<% end %>
<div class="table-responsive">
  <table class="table">
    <tbody>
        <tr>
          <td><strong>Tournament:</strong><%= @game.tournament.name %></td>
          <td>Round: <%= @game.round %></td>
          <td><strong>Date:</strong></td>
          <td><%= @game.date %></td>
        </tr>
        <tr>
          <td><%= image_tag @game.first_team.image, class: "#{@game.first_team.team_type}_team_image" , title: @game.first_team.name%></td>
          <th>
            <%= @game.score_first_team %>
            <strong>X</strong>
            <%= @game.score_second_team %>
          </th>
          <td><%= image_tag @game.second_team.image, class: "#{@game.second_team.team_type}_team_image" , title: @game.second_team.name%></td>
          <tr>
            <td>
              <%= link_to 'Back', games_path %>
            </td>
          </tr>
        </tr>
    </tbody>
  </table>
</div>
