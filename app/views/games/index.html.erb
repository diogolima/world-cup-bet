<div>
<h1>All Games</h1>
</div>
<div>
  <%= link_to 'New', new_game_path %>
</div>
<div>
  <div class="table-responsive">
    <table class="table">
      <tbody>
        <% @games.each_with_index do |game, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><strong>Tournament:</strong></td>
            <td><%= game.tournament.name %></td>
            <td><strong>Date:</strong></td>
            <td><%= game.date %></td>
          </tr>
          <tr>
            <td><%= image_tag game.first_team.image, class: 'team_image' %></td>
            <th>
              <%= game.score_first_team %>
              <strong>X</strong>
              <%= game.score_second_team %>
            </th>
            <td><%= image_tag game.second_team.image, class: 'team_image' %></td>
            <tr>
              <td>
                <%= link_to 'Edit', edit_game_path(game) %>
                <%= link_to 'Delete', game_path(game), method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
