<div>
  <h1>All Teams
    <% if user_admin %>
      <%= link_to 'New', new_team_path, class: "btn btn-dark" %>
    <% end %>
  </h1><br/>
</div>
<div class="table-responsive">
  <% @teams.each do |team| %>
  <div class='col-md-3 team-pad'>
    <%= link_to (image_tag team.image.url, class: "#{team.team_type}_team_image img-rounded"), team , title: team.name %>
    <%= team.name %>
  </div>
  <% end %>
</div>
