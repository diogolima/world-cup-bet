<p>
  <%= image_tag @team.image.url, class: 'team-image' %>
</p>
<p>
  <%= @team.name %> <br>
</p>

<% if !current_user.nil? && current_user.admin %>
  <%= link_to 'Edit', edit_team_path(@team) %>
  <%= link_to 'Delete', team_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', teams_path %>
